final case class Reveal(val blue: Int, val red: Int, val green: Int) {
  def isPossible(maxReveal: Reveal): Boolean = {
    blue <= maxReveal.blue &&
      red <= maxReveal.red &&
      green <= maxReveal.green
  }
}
case class Game(val reveals: Seq[Reveal])
def cleanup(input: String) = input.split(":").last
def digits(input: String) = input.replaceAll("[^0-9]", "")
def parseReveals(input: String): Seq[Reveal]  = {
  input.split(";").map( x => {
    val tokens = x.split(",")
    tokens.foldLeft(Reveal(0, 0, 0)) {
      case (reveal, token) if token.contains("green") => reveal.copy(green = digits(token).toInt)
      case (reveal, token) if token.contains("blue") => reveal.copy(blue = digits(token).toInt)
      case (reveal, token) if token.contains("red") => reveal.copy(red = digits(token).toInt)
      case (reveal, _) => reveal // No match, return the existing reveal
    }
  }
  )
}

